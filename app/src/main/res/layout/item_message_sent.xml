<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp">

    <com.vanniktech.emoji.EmojiTextView
        android:id="@+id/text_message_body"
        android:text="Hello Message Sender!!!!"
        android:background="@drawable/rounded_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="12sp"
        android:textColor="#ffffff"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_message_time"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="7sp"
        android:layout_marginRight="4dp"
        android:gravity="right"
        app:layout_constraintBottom_toBottomOf="@+id/text_message_body"
        app:layout_constraintRight_toLeftOf="@+id/text_message_body" />

    <TextView
        android:id="@+id/msgstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seen"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:layout_marginRight="4dp"
        app:layout_constraintEnd_toEndOf="@+id/text_message_body"
        app:layout_constraintTop_toBottomOf="@+id/text_message_body">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>