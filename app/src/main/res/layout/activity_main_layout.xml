<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"

android:layout_width="match_parent"
android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<androidx.viewpager.widget.ViewPager
    android:id="@+id/viewPager"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="56dp" />

<eu.long1.spacetablayout.SpaceTabLayout
    android:id="@+id/spaceTabLayout"
    android:clickable="false"
    android:focusable="false"
    app:tabRippleColor="@android:color/transparent"
    app:icon_one="@drawable/ic_person_add_black_24dp"
    app:icon_two="@drawable/ic_chat_black_24dp"
    app:icon_three="@drawable/ic_profile_black_24dp"
    app:text_one="Contacts"
    app:text_two="Chats"
    app:text_three="Room"
    app:button_color="#F2DBF7"
    app:text_color="#F2DBF7"
    app:layout_behavior="eu.long1.spacetablayout.SpaceTabLayoutBehavior"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:number_of_tabs="three"
    app:starting_position="two" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
    <LinearLayout
        android:id="@+id/splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical" />
</FrameLayout>